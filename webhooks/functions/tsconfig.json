{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES5",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "outDir": "build",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "types": [
    "node-fetch/externals"
  ]
}

